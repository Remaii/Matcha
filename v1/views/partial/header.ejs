<!DOCTYPE html>
<html>
<head>
    <title>Matcha</title>

    <script src="https://code.jquery.com/jquery-3.2.0.min.js"></script>
    <script type="text/javascript" src="/asset/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/asset/bootstrap/js/bootstrap-slider.min.js"></script>
    <script type="text/javascript" src="/asset/js/socket.io.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/asset/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/asset/bootstrap/css/bootstrap-slider.min.css">
    <link rel='stylesheet' href='https://bootswatch.com/slate/bootstrap.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .main.container
        {
            margin-top: 80px;
        }
        .dropdown
        {
            margin: 0px;
        }
    </style>
</head>
<body>
    <div id="userName" style="display: none;"><%= locals.session['login'] %></div>
    <script type="text/javascript">
        var socket = io();
        var user;
        var log = document.querySelector('#userName');
        if (log.innerText != '') {
            socket.emit('checkNotif', {login: log.innerText});
            
            socket.on('notif', function(data) {
                console.log(data);
                var notif = document.querySelector('#notif_drop');
                var tchat = document.querySelector('#tchat_drop');
                notif.innerHTML = '';
                tchat.innerHTML = '';
                if (data.myNotif.like) {
                    for (var i = 0; data.myNotif.like[i]; i++) {
                    notif.innerHTML += '<li><a href="/profile/'+ data.myNotif.like[i] +'">"' + data.myNotif.like[i] + '" a liker votre profile</a></li>';
                    }
                }
                if (data.myNotif.tchat) {
                    for (var b = 0; data.myNotif.tchat[b]; b++) {
                        tchat.innerHTML += '<li><a href="/tchat/'+ data.myNotif.tchat[b] +'">"' + data.myNotif.tchat[b] + '"</a></li>';
                    }
                }
            });
        }
    </script>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Matcha</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form method="POST" action="/profile" class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input class="form-control" placeholder="Pseudo" type="text" name="search">
                    </div>
                    <button type="submit" class="btn btn-default">Go</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
            <% if (!locals.session['login']) { %>
                    <li><a href="/login">Login</a></li>
            <% } else { %>
                    <!-- dropup gauche avec les profils autoriser au tchat -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tchat <span class="caret"></span></a>
                            <ul id="tchat_drop" class="dropdown-menu" role="menu">
                            <!-- remplissage par socket.io getMyNotif tchateur -->
                            </ul>
                        </li>
                    <!-- dropup droit avec les notif -->
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Notif <span class="caret"></span></a>
                            <ul id="notif_drop" class="dropdown-menu" role="menu">
                                <!-- remplissage par socket.io getMyNotif like -->
                            </ul>
                        </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Mon compte <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/compte/profile">Mon profile</a></li>
                            <li class="divider"></li>
                            <li><a href="/compte/info">Mes infos</a></li>
                        </ul>
                            <li><a href="/delog">Logout</a></li>
                    </li>
            <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <% if(locals.flash && locals.flash.error) { %>
        <div class="alert alert-dismissible alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash.error %>
        </div>
    <% } %>
    <% if(locals.flash && locals.flash.mess) { %>
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash.mess %>
        </div>
    <% } %>
    <div class="container-fluid">