<% include partial/header %>

<div class="ui stackable two column divided grid container">
    <div class="row">
        <div class="col-md-6 text-center col-md-offset-3">
            <a class="text-center" href="/login">Déja un compte ?</a>
        </div></br></br>
        <div class="col-md-6 col-md-offset-3">
            <form action="/register" method="post">
                <label class="col-md-6 col-md-offset-3 text-center">Tu es :</label>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <input class="text-center" type="text" name="firstname" placeholder="Prénom">
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <input class="text-center" type="text" name="lastname" placeholder="Nom">
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <select class="form-control text-center input-sm" name="sexe" size="1">
                            <option>Femme</option>
                            <option>Homme</option>
                        </select>
                    </div>
                </div>    
                <input class="form-control text-center" type="text" name="login" placeholder="Login">
                <input class="form-control text-center" type="password" name="pwd" placeholder="Mot de passe">
                <input class="form-control text-center" type="password" name="cfpwd" placeholder="Le même mot de passe?">
                <input class="form-control text-center" type="email" name="mail" placeholder="Mail">
                <input class="btn btn-primary col-md-6 col-md-offset-3" type="submit" name="submit" value="Register">
            </form>
        </div>
    </div>
</div>

<% include partial/footer %>